<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/cart_background"
    android:elevation="5dp">

    <ImageView
        android:id="@+id/medicament_pic"
        android:layout_width="150dp"
        android:layout_height="110dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/doliprane" />

    <TextView
        android:id="@+id/medicament_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Doliprane"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/medicament_pic"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/medicament_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="8 comprimés pelliculés"
        android:textColor="#7A7474"
        app:layout_constraintStart_toStartOf="@+id/medicament_title"
        app:layout_constraintTop_toBottomOf="@+id/medicament_title" />

    <TextView
        android:id="@+id/medicament_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="19 DH"
        android:textColor="#F44336"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/medicament_desc"
        app:layout_constraintTop_toBottomOf="@+id/medicament_desc" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="44dp"
        android:layout_height="40dp"
        android:background="@drawable/red_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/change_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>